{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "dom"
        ],
        "rootDir": "./src",
        "outDir": "./gen",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "erasableSyntaxOnly": true,
    },
    "paths": {
        "typescript/*": [
            "./node_modules/typescript/*"
        ],
    },
}